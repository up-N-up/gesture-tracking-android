<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <GridLayout
        android:id="@+id/grid_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="2"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.krishna.eventdetector_demo.MainActivity">

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_row="0">

            <LinearLayout
                android:id="@+id/shoe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#F7F2F1" />

                <TextView
                    android:id="@+id/text1a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Item: Shoe"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/image1b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Price: 4000"
                    android:textSize="17sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:layout_row="0">

            <LinearLayout
                android:id="@+id/hard_drive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#F7F2F1" />

                <TextView
                    android:id="@+id/text2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Item: Hard Drive"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/text2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Price: 5000"
                    android:textSize="17sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:layout_row="1">

            <LinearLayout
                android:id="@+id/laptop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#F7F2F1" />

                <TextView
                    android:id="@+id/text3a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Item: Laptop"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/text3b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Price: 35000"
                    android:textSize="17sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_row="1">

            <LinearLayout
                android:id="@+id/trimmer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#F7F2F1" />

                <TextView
                    android:id="@+id/text4a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Item: Trimmer"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/text4b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Price: 1500"
                    android:textSize="17sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</FrameLayout>
